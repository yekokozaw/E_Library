<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.ELibrary" parent="Theme.MaterialComponents.DayNight.NoActionBar" >
        <item name="android:statusBarColor">@color/colorSecondary</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="textInputStyle">@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox</item>
        <item name="android:textColorHint">@color/black</item>
    </style>

    <style name="CustomTextInputLayoutOutlinedBox" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/colorSecondary</item>
    </style>

    <style name="AlertDialogTheme" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <!-- Set button text color -->
        <item name="colorPrimary">@color/colorSecondary</item>
    </style>

</resources>

