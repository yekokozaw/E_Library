<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorSecondary"
    tools:context=".ui.activity.LoginActivity">

    <RelativeLayout
        android:id="@+id/rlLogo"
        android:layout_width="match_parent"
        android:layout_height="240dp">
        <ImageView
            android:id="@+id/tvLogin"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@mipmap/kyauksetu_logoonly"
            android:layout_marginTop="@dimen/margin_xlarge"
            android:layout_centerHorizontal="true"
            android:contentDescription="" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Log in"
            android:textStyle="bold"
            android:textColor="@color/primaryTextColor"
            android:layout_marginTop="@dimen/margin_medium_3"
            android:textSize="@dimen/text_regular_3x"
            android:layout_below="@id/tvLogin"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_below="@id/rlLogo"
        android:background="@drawable/background_login"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/edtLayoutEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hintTextColor="@color/colorAccent"
            android:layout_marginTop="@dimen/margin_xxlarge"
            app:endIconMode="clear_text"
            app:startIconTint="@android:color/transparent"
            app:startIconTintMode="screen"
            app:startIconDrawable="@mipmap/email"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:endIconTint="@color/secondaryTextColor"
            android:layout_marginEnd="@dimen/margin_medium_3"
            android:layout_marginStart="@dimen/margin_medium_3">

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/etEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:textColor="@color/black"
                android:textColorHint="@color/secondaryTextColor"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/edtLayoutPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hintTextColor="@color/colorAccent"
            android:layout_marginTop="@dimen/margin_large"
            app:endIconMode="password_toggle"
            app:startIconTint="@android:color/transparent"
            app:startIconTintMode="screen"
            app:startIconDrawable="@mipmap/padlock"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:endIconTint="@color/secondaryTextColor"
            android:layout_below="@id/edtLayoutEmail"
            android:layout_marginEnd="@dimen/margin_medium_3"
            android:layout_marginStart="@dimen/margin_medium_3">

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/etPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password"
                android:inputType="textPassword"
                android:textColor="@color/black"
                android:textColorHint="@color/secondaryTextColor"/>

        </com.google.android.material.textfield.TextInputLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="log in"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackgroundBorderless"
            android:background="@drawable/background_login_button"
            android:layout_marginTop="@dimen/margin_xlarge"
            android:layout_marginStart="@dimen/margin_medium_3"
            android:layout_marginEnd="@dimen/margin_medium_3"
            android:layout_below="@id/edtLayoutPassword"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btnLogin"
            android:layout_marginTop="@dimen/margin_medium_2"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_small"
                android:text="@string/not_a_member"
                android:textSize="@dimen/text_regular_2x"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvRegister"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="@string/register"
                android:textColor="@color/colorSecondary"
                android:textSize="@dimen/text_regular_2x" />
        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>